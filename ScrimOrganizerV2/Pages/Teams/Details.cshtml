@page
@model ScrimOrganizerV2.Pages.Teams.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Summoners
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Team.Summoners)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                        <br />
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
